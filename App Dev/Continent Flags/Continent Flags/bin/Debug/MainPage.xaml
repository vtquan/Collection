<common:LayoutAwarePage
    x:Name="pageRoot"
    x:Class="Continent_Flags.MainPage"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Continent_Flags"
    xmlns:common="using:Continent_Flags.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>

        <!-- TODO: Delete this line if the key AppName is declared in App.xaml -->
        <x:String x:Key="AppName">North America Flags</x:String>
    </Page.Resources>

    <!--
        This grid acts as a root panel for the page that defines two rows:
        * Row 0 contains the back button and page title
        * Row 1 contains the rest of the page layout
    -->
    <Grid Style="{StaticResource LayoutRootStyle}">
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Back button and page title -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:ConnectionId='24' x:Name="backButton"                IsEnabled="{Binding Frame.CanGoBack, ElementName=pageRoot}" Style="{StaticResource BackButtonStyle}"/>
            <TextBlock x:Name="pageTitle" Grid.Column="1" Text="{StaticResource AppName}" Style="{StaticResource PageHeaderTextStyle}"/>
        </Grid>
        <Grid Grid.Row="1">
        	<Grid.RowDefinitions>
        		<RowDefinition/>
        		<RowDefinition/>
        		<RowDefinition/>
        	</Grid.RowDefinitions>
        	<Grid.ColumnDefinitions>
        		<ColumnDefinition/>
        		<ColumnDefinition/>
        		<ColumnDefinition/>
        		<ColumnDefinition/>
        		<ColumnDefinition/>
        		<ColumnDefinition/>
        		<ColumnDefinition/>
        		<ColumnDefinition/>
        	</Grid.ColumnDefinitions>
        	<Canvas x:ConnectionId='1' Margin="10"                         >
        		<Canvas.Background>
        			<ImageBrush ImageSource="ms-appx:/Assets/Flags/AntiguaBarbuda.gif" Stretch="Uniform"/>
        		</Canvas.Background>
        	</Canvas>
        	<Canvas x:ConnectionId='2' Margin="10" Grid.Column="1"                         >
        		<Canvas.Background>
        			<ImageBrush ImageSource="Assets/Flags/Bahamas.gif" Stretch="Uniform"/>
        		</Canvas.Background>
        	</Canvas>
        	<Canvas x:ConnectionId='3' Margin="10" Grid.Column="2"                         >
        		<Canvas.Background>
        			<ImageBrush ImageSource="Assets/Flags/Barbados.gif" Stretch="Uniform"/>
        		</Canvas.Background>
        	</Canvas>
        	<Canvas x:ConnectionId='4' Margin="10" Grid.Column="3"                         >
        		<Canvas.Background>
        			<ImageBrush ImageSource="Assets/Flags/Belize.gif" Stretch="Uniform"/>
        		</Canvas.Background>
        	</Canvas>
        	<Canvas x:ConnectionId='5' Margin="10" Grid.Column="4"                         >
        		<Canvas.Background>
        			<ImageBrush ImageSource="Assets/Flags/Canada.gif" Stretch="Uniform"/>
        		</Canvas.Background>
        	</Canvas>
        	<Canvas x:ConnectionId='6' Margin="10" Grid.Column="5"                         >
        		<Canvas.Background>
        			<ImageBrush ImageSource="Assets/Flags/Costa Rica.gif" Stretch="Uniform"/>
        		</Canvas.Background>
        	</Canvas>
        	<Canvas x:ConnectionId='7' Margin="10" Grid.Column="6"                         >
        		<Canvas.Background>
        			<ImageBrush ImageSource="Assets/Flags/Cuba.gif" Stretch="Uniform"/>
        		</Canvas.Background>
        	</Canvas>
        	<Canvas x:ConnectionId='8' Margin="10" Grid.Column="7"                         >
        		<Canvas.Background>
        			<ImageBrush ImageSource="Assets/Flags/Dominica.gif" Stretch="Uniform"/>
        		</Canvas.Background>
        	</Canvas>
        	<Canvas x:ConnectionId='9' Margin="10" Grid.Row="1"                         >
        		<Canvas.Background>
        			<ImageBrush ImageSource="Assets/Flags/Dominican Republic.gif" Stretch="Uniform"/>
        		</Canvas.Background>
        	</Canvas>
        	<Canvas x:ConnectionId='10' Margin="10" Grid.Column="1" Grid.Row="1"                          >
        		<Canvas.Background>
        			<ImageBrush ImageSource="Assets/Flags/El Salvador.gif" Stretch="Uniform"/>
        		</Canvas.Background>
        	</Canvas>
        	<Canvas x:ConnectionId='11' Margin="10" Grid.Column="2" Grid.Row="1"                          >
        		<Canvas.Background>
        			<ImageBrush ImageSource="Assets/Flags/Grenada.gif" Stretch="Uniform"/>
        		</Canvas.Background>
        	</Canvas>
        	<Canvas x:ConnectionId='12' Margin="10" Grid.Column="3" Grid.Row="1"                          >
        		<Canvas.Background>
        			<ImageBrush ImageSource="Assets/Flags/Guatemala.gif" Stretch="Uniform"/>
        		</Canvas.Background>
        	</Canvas>
        	<Canvas x:ConnectionId='13' Margin="10" Grid.Column="4" Grid.Row="1"                          >
        		<Canvas.Background>
        			<ImageBrush ImageSource="Assets/Flags/Haiti.gif" Stretch="Uniform"/>
        		</Canvas.Background>
        	</Canvas>
        	<Canvas x:ConnectionId='14' Margin="10" Grid.Column="5" Grid.Row="1"                          >
        		<Canvas.Background>
        			<ImageBrush ImageSource="Assets/Flags/Honduras.gif" Stretch="Uniform"/>
        		</Canvas.Background>
        	</Canvas>
        	<Canvas x:ConnectionId='15' Margin="10" Grid.Column="6" Grid.Row="1"                          >
        		<Canvas.Background>
        			<ImageBrush ImageSource="Assets/Flags/Jamaica.gif" Stretch="Uniform"/>
        		</Canvas.Background>
        	</Canvas>
        	<Canvas x:ConnectionId='16' Margin="10" Grid.Column="7" Grid.Row="1"                          >
        		<Canvas.Background>
        			<ImageBrush ImageSource="Assets/Flags/Mexico.gif" Stretch="Uniform"/>
        		</Canvas.Background>
        	</Canvas>
        	<Canvas x:ConnectionId='17' Margin="10" Grid.Row="2"                          >
        		<Canvas.Background>
        			<ImageBrush ImageSource="Assets/Flags/Nicaragua.gif" Stretch="Uniform"/>
        		</Canvas.Background>
        	</Canvas>
        	<Canvas x:ConnectionId='18' Margin="10" Grid.Column="1" Grid.Row="2"                          >
        		<Canvas.Background>
        			<ImageBrush ImageSource="Assets/Flags/Panama.gif" Stretch="Uniform"/>
        		</Canvas.Background>
        	</Canvas>
        	<Canvas x:ConnectionId='19' Margin="10" Grid.Column="2" Grid.Row="2"                          >
        		<Canvas.Background>
        			<ImageBrush ImageSource="Assets/Flags/St. Kitts and Nevis.gif" Stretch="Uniform"/>
        		</Canvas.Background>
        	</Canvas>
        	<Canvas x:ConnectionId='20' Margin="10" Grid.Column="3" Grid.Row="2"                          >
        		<Canvas.Background>
        			<ImageBrush ImageSource="Assets/Flags/St. Lucia.gif" Stretch="Uniform"/>
        		</Canvas.Background>
        	</Canvas>
            <Canvas x:ConnectionId='21' Margin="10" Grid.Column="4" Grid.Row="2"                          >
        		<Canvas.Background>
        			<ImageBrush ImageSource="Assets/Flags/St. Vincent and the Grenadines.gif" Stretch="Uniform"/>
        		</Canvas.Background>
        	</Canvas>
        	<Canvas x:ConnectionId='22' Margin="10" Grid.Column="5" Grid.Row="2"                          >
        		<Canvas.Background>
        			<ImageBrush ImageSource="Assets/Flags/Trinidad and Tobago.gif" Stretch="Uniform"/>
        		</Canvas.Background>
        	</Canvas>
        	<Canvas x:ConnectionId='23' Margin="10" Grid.Column="6" Grid.Row="2"                          >
        		<Canvas.Background>
        			<ImageBrush ImageSource="Assets/Flags/U.S.A..gif" Stretch="Uniform"/>
        		</Canvas.Background>
        	</Canvas>
        </Grid>

        <VisualStateManager.VisualStateGroups>

            <!-- Visual states reflect the application's view state -->
            <VisualStateGroup x:Name="ApplicationViewStates">
                <VisualState x:Name="FullScreenLandscape"/>
                <VisualState x:Name="Filled"/>

                <!-- The entire page respects the narrower 100-pixel margin convention for portrait -->
                <VisualState x:Name="FullScreenPortrait">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="backButton" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource PortraitBackButtonStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>

                <!-- The back button and title have different styles when snapped -->
                <VisualState x:Name="Snapped">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="backButton" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SnappedBackButtonStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="pageTitle" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SnappedPageHeaderTextStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</common:LayoutAwarePage>

