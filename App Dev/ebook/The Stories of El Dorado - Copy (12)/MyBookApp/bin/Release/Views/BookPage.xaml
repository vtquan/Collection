<common:LayoutAwarePage x:Name="pageRoot"
                        x:Class="MyBookApp.Views.BookPage"
                        DataContext="{Binding ViewModel, RelativeSource={RelativeSource Self}}"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:localControls="using:MyBookApp.Controls"
                        xmlns:common="using:MyBookApp.Common"
                        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                        IsTabStop="false"
                        Background="White"
                        mc:Ignorable="d">

    <Page.Resources>
        <common:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <common:BooleanNegationToVisibilityConverter x:Key="BooleanNegationToVisibilityConverter" />

        <Style x:Key="backButton_Themed"
               TargetType="Button">
            <Setter Property="MinWidth"
                    Value="0" />
            <Setter Property="Width"
                    Value="48" />
            <Setter Property="Height"
                    Value="48" />
            <Setter Property="Margin"
                    Value="36,0,36,36" />
            <Setter Property="VerticalAlignment"
                    Value="Bottom" />
            <Setter Property="FontFamily"
                    Value="Segoe UI Symbol" />
            <Setter Property="FontWeight"
                    Value="Normal" />
            <Setter Property="FontSize"
                    Value="56" />
            <Setter Property="AutomationProperties.AutomationId"
                    Value="BackButton" />
            <Setter Property="AutomationProperties.Name"
                    Value="Back" />
            <Setter Property="AutomationProperties.ItemType"
                    Value="Navigation Button" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid x:Name="RootGrid">

                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames
                                                Storyboard.TargetProperty="(UIElement.Visibility)"
                                                Storyboard.TargetName="NormalGlyph">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <Visibility>Visible</Visibility>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="PointerOver">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="BackgroundGlyph"
                                                                           Storyboard.TargetProperty="Foreground">
                                                <DiscreteObjectKeyFrame KeyTime="0"
                                                                        Value="{Binding ThemeColors.BackgroundHoverColor}" />
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="NormalGlyph"
                                                                           Storyboard.TargetProperty="Foreground">
                                                <DiscreteObjectKeyFrame KeyTime="0"
                                                                        Value="{Binding ThemeColors.ForegroundColor}" />
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="BackgroundGlyph"
                                                                           Storyboard.TargetProperty="Foreground">
                                                <DiscreteObjectKeyFrame KeyTime="0"
                                                                        Value="{Binding ThemeColors.ForegroundColor}" />
                                            </ObjectAnimationUsingKeyFrames>
                                            <DoubleAnimation Storyboard.TargetName="ArrowGlyph"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="1"
                                                             Duration="0" />
                                            <DoubleAnimation Storyboard.TargetName="NormalGlyph"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="0"
                                                             Duration="0" />
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Disabled">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="RootGrid"
                                                                           Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0"
                                                                        Value="Collapsed" />
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                                <VisualStateGroup x:Name="FocusStates">
                                    <VisualState x:Name="Focused">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="FocusVisualWhite"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="1"
                                                             Duration="0" />
                                            <DoubleAnimation Storyboard.TargetName="FocusVisualBlack"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="1"
                                                             Duration="0" />
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Unfocused" />
                                    <VisualState x:Name="PointerFocused" />
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Grid Margin="-1,-16,0,0">
                                <TextBlock x:Name="BackgroundGlyph"
                                           Text="&#xE0A8;"
                                           Foreground="{StaticResource BackButtonBackgroundThemeBrush}" />
                                <TextBlock x:Name="NormalGlyph"
                                           Text="{StaticResource BackButtonGlyph}"
                                           Foreground="{Binding ThemeColors.ForegroundColor}" />
                                <TextBlock x:Name="ArrowGlyph"
                                           Text="&#xE0A6;"
                                           Foreground="{Binding ThemeColors.BackgroundColor}"
                                           Opacity="0" />
                            </Grid>
                            <Rectangle x:Name="FocusVisualWhite"
                                       IsHitTestVisible="False"
                                       Stroke="{StaticResource FocusVisualWhiteStrokeThemeBrush}"
                                       StrokeEndLineCap="Square"
                                       StrokeDashArray="1,1"
                                       Opacity="0"
                                       StrokeDashOffset="1.5" />
                            <Rectangle x:Name="FocusVisualBlack"
                                       IsHitTestVisible="False"
                                       Stroke="{StaticResource FocusVisualBlackStrokeThemeBrush}"
                                       StrokeEndLineCap="Square"
                                       StrokeDashArray="1,1"
                                       Opacity="0"
                                       StrokeDashOffset="0.5" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid x:Name="MainGrid"
          Style="{StaticResource LayoutRootStyle}"
          Background="{Binding ThemeColors.BackgroundColor}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="120" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="140" />
            <RowDefinition Height="*" />
            <RowDefinition Height="140" />
        </Grid.RowDefinitions>

        <Grid Grid.ColumnSpan="3"
              x:Name="TopGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="120" />
            </Grid.ColumnDefinitions>

            <Button x:ConnectionId='5' x:Name="backButton"
                                  
                    IsEnabled="{Binding Frame.CanGoBack, ElementName=pageRoot}"
                    Style="{StaticResource backButton_Themed}" />

            <TextBlock x:Name="PageTitle"
                       Grid.Column="1"
                       Text="{StaticResource AppName}"
                       Style="{StaticResource PageHeaderTextStyle}"
                       Foreground="{Binding ThemeColors.ForegroundColor}" />

            <StackPanel x:Name="PagesPanel"
                        Grid.Column="1"
                        Orientation="Horizontal"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        Margin="0"
                        Visibility="Collapsed">
                <TextBlock x:Name="CurrentPageNumber"
                           TextWrapping="Wrap"
                           Text="100"
                           Style="{StaticResource TitleTextStyle}"
                           VerticalAlignment="Top"
                           FontWeight="Normal"
                           FontSize="16"
                           RenderTransformOrigin="1,0.5"
                           HorizontalAlignment="Center"
                           Foreground="{Binding ThemeColors.ForegroundColor}">
                    <TextBlock.RenderTransform>
                        <CompositeTransform TranslateX="-1"
                                            TranslateY="4" />
                    </TextBlock.RenderTransform>
                </TextBlock>
                <TextBlock TextWrapping="Wrap"
                           Text="|"
                           Style="{StaticResource TitleTextStyle}"
                           VerticalAlignment="Top"
                           FontWeight="Normal"
                           FontSize="18.667"
                           HorizontalAlignment="Center"
                           Margin="2,0"
                           Foreground="{Binding ThemeColors.ForegroundColor}" />
                <TextBlock x:Name="TotalNumberOfPages"
                           TextWrapping="Wrap"
                           Text="1000"
                           VerticalAlignment="Top"
                           Style="{StaticResource TitleTextStyle}"
                           FontWeight="Normal"
                           FontSize="18.667"
                           HorizontalAlignment="Center"
                           Margin="0,1,0,0"
                           Foreground="{Binding ThemeColors.ForegroundColor}" />
            </StackPanel>
        </Grid>

        <Grid x:Name="ContentGrid"
              Grid.Row="1"
              Grid.Column="0"
              Grid.ColumnSpan="3"
              Margin="120,0">

            <Rectangle x:Name="WebViewRect"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch"
                       Fill="{Binding ThemeColors.BackgroundColor}"
                       Canvas.ZIndex="1" />
        </Grid>

        <Popup x:Name="FontSizePopup"
               IsLightDismissEnabled="True"
               Width="75"
               Height="300"
               Canvas.ZIndex="100"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Grid.RowSpan="2"
               Grid.ColumnSpan="2"
               Margin="10,0,0,0">
            <ListBox x:ConnectionId='4' x:Name="FontSizeList"
                     Margin="0,0,0,176"
                     Width="75"
                     Background="{Binding ThemeColors.BackgroundColorLight}"
                     BorderBrush="{Binding ThemeColors.ForegroundColor}"
                                                                     >
                <ListBoxItem Content="A"
                             FontSize="14.667" />
                <ListBoxItem Content="A"
                             FontSize="17.333" />
                <ListBoxItem Content="A"
                             FontSize="20" />
                <ListBoxItem Content="A"
                             FontSize="22.667" />
                <ListBoxItem Content="A"
                             FontSize="25.333" />
                <ListBoxItem Content="A"
                             FontSize="28" />
            </ListBox>
        </Popup>

        <Popup x:Name="FontStylePopup"
               IsLightDismissEnabled="True"
               Width="143"
               Height="158"
               Canvas.ZIndex="100"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Grid.RowSpan="2"
               Grid.ColumnSpan="2">
            <ListBox x:ConnectionId='3' x:Name="FontStyleList"
                     Margin="0,0,0,176"
                     Background="{Binding ThemeColors.BackgroundColorLight}"
                     BorderBrush="{Binding ThemeColors.ForegroundColor}"
                                                                      >
                <ListBoxItem Content="Cambria"
                             FontFamily="Cambria"
                             FontSize="26" />
                <ListBoxItem Content="Georgia"
                             FontFamily="Georgia"
                             FontSize="26" />
                <ListBoxItem Content="Constantia"
                             FontSize="26"
                             FontFamily="Constantia" />
            </ListBox>
        </Popup>

        <Popup x:ConnectionId='1' x:Name="TableOfContentsPopup"
               IsLightDismissEnabled="True"
               Canvas.ZIndex="100"
               HorizontalAlignment="Right"
               Grid.RowSpan="3"
               Width="380"
                                                   
               Grid.Column="1"
               Grid.ColumnSpan="2">
            <Popup.ChildTransitions>
                <TransitionCollection>
                    <PaneThemeTransition />
                </TransitionCollection>
            </Popup.ChildTransitions>

            <Grid x:Name="GridToc"
                  ScrollViewer.VerticalScrollBarVisibility="Disabled"
                  Margin="0"
                  Background="#FFC3C3C3">

                <Grid.RowDefinitions>
                    <RowDefinition Height="80" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Border BorderThickness="2,0,0,0"
                        Canvas.ZIndex="2"
                        BorderBrush="{Binding ThemeColors.ForegroundColor}"
                        Grid.RowSpan="2" />
                <TextBlock Text="Table of Contents"
                           Style="{StaticResource PageSubheaderTextStyle}"
                           Margin="20"
                           VerticalAlignment="Center"
                           Foreground="{Binding ThemeColors.ForegroundColorLight}"
                           FontWeight="Bold" />
                <TextBlock x:Name="TbNoToc"
                           Margin="20"
                           Text="no table of contents..."
                           Style="{StaticResource SubheaderTextStyle}"
                           FontSize="29.333"
                           Foreground="{Binding ThemeColors.ForegroundColorLight}"
                           HorizontalAlignment="Left"
                           Grid.Row="1"
                           VerticalAlignment="Top" />
                <ListBox x:ConnectionId='2' x:Name="TocList"
                         Margin="10"
                         Background="{x:Null}"
                         Foreground="{StaticResource ListBoxForegroundThemeBrush}"
                         HorizontalContentAlignment="Left"
                         VerticalContentAlignment="Top"
                                                                    
                         Grid.Row="1"
                         BorderThickness="0">
                    <ListBox.ItemContainerTransitions>
                        <TransitionCollection>
                            <ContentThemeTransition />
                        </TransitionCollection>
                    </ListBox.ItemContainerTransitions>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Width="335"
                                           TextTrimming="WordEllipsis"
                                           Text="{Binding SectionName}" />
                                <TextBlock Text="{Binding StartPage}"
                                           Margin="0,0,15,0" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Popup>

        <Grid x:Name="SnappedGrid"
              Grid.RowSpan="3"
              Background="{StaticResource ApplicationForegroundThemeBrush}"
              Grid.ColumnSpan="3"
              Visibility="Collapsed">
            <Image Source="/Assets/SplashScreen.png"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="20,0" />
        </Grid>

        <VisualStateManager.VisualStateGroups>

            <VisualStateGroup x:Name="ApplicationViewStates">
                <VisualState x:Name="FullScreenLandscape" />
                <VisualState x:Name="Filled" />
                <VisualState x:Name="FullScreenPortrait" />
                <VisualState x:Name="Snapped">

                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)"
                                                       Storyboard.TargetName="TopGrid">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <Visibility>Collapsed</Visibility>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)"
                                                       Storyboard.TargetName="ContentGrid">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <Visibility>Collapsed</Visibility>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)"
                                                       Storyboard.TargetName="FontSizePopup">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <Visibility>Collapsed</Visibility>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)"
                                                       Storyboard.TargetName="FontStylePopup">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <Visibility>Collapsed</Visibility>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)"
                                                       Storyboard.TargetName="TableOfContentsPopup">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <Visibility>Collapsed</Visibility>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)"
                                                       Storyboard.TargetName="SnappedGrid">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <Visibility>Visible</Visibility>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)"
                                                       Storyboard.TargetName="bottomAppBar">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <Visibility>Collapsed</Visibility>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>

    <Page.BottomAppBar>
        <AppBar x:ConnectionId='6' x:Name="bottomAppBar"
                IsSticky="False"
                Padding="0"
                                            >
            <Grid Background="#FFCBCBCB">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="350*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Left">
                    <Button x:ConnectionId='11' x:Name="BtnFontSize"
                            Style="{StaticResource FontSizeAppBarButtonStyle}"
                                                      />
                    <Button x:ConnectionId='12' x:Name="BtnFontStyle"
                            Style="{StaticResource FontAppBarButtonStyle}"
                                                       />
                    <Button x:ConnectionId='13' x:Name="BtnOneColumn"
                            Visibility="{Binding IsShowingTwoColumns, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Style="{StaticResource PageAppBarButtonStyle}"
                                                               />
                    <Button x:ConnectionId='14' x:Name="BtnTwoColumns"
                            Visibility="{Binding IsShowingTwoColumns, Converter={StaticResource BooleanNegationToVisibilityConverter}}"
                            Style="{StaticResource TwoPageAppBarButtonStyle}"
                                                               />
                </StackPanel>

                <Slider x:ConnectionId='7' Grid.Column="1"
                        x:Name="CurrentPositionSlider"
                        Height="40"
                        Value="0"
                        Minimum="0"
                        IsTabStop="False"
                        IsThumbToolTipEnabled="False"
                                                                         
                        Margin="15,0" />

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Grid.Column="2">

                    <localControls:AppBarToggleButton x:ConnectionId='8' x:Name="BtnTheme"
                                                      Style="{StaticResource OutlineStarAppBarButtonStyle}"
                                                      AutomationProperties.Name="{Binding NightModeBtnText}"
                                                      IsChecked="{Binding NightMode}"
                                                                             />
                    <localControls:AppBarToggleButton x:ConnectionId='9' x:Name="BtnToggleSlideMode"
                                                      Style="{StaticResource SwitchAppBarButtonStyle}"
                                                      AutomationProperties.Name="{Binding SlideAnimationBtnText}"
                                                      IsChecked="{Binding SlidePageAnimation}"
                                                                                       />

                    <Border BorderBrush="{StaticResource AppBarItemForegroundThemeBrush}"
                            BorderThickness="1,0,0,0"
                            Height="60"
                            Margin="10,-15,13,0"
                            Padding="0" />

                    <Button x:ConnectionId='10' x:Name="BtnTableOfContents"
                            AutomationProperties.Name="Table of Contents"
                            Style="{StaticResource ListAppBarButtonStyle}"
                                                             />
                </StackPanel>
            </Grid>
        </AppBar>
    </Page.BottomAppBar>
</common:LayoutAwarePage>

