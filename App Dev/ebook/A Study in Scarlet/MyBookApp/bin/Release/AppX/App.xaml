<Application x:Class="MyBookApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sel="using:MyBookApp.Selectors"
             RequestedTheme="Light">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Common/StandardStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Change these settings to your book title and image -->
            <x:String x:Key="AppName">A Study in Scarlet</x:String>
            <x:String x:Key="EPubBook">ms-appx:///Assets/Book/A Study in Scarlet - Sir Arthur Conan Doyle.epub</x:String>
            <x:String x:Key="CoverImage">ms-appx:///Assets/Book/Cover.jpg</x:String>
            <x:String x:Key="Description">
                A Study in Scarlet is a popular Sherlock Holmes book written by author Arthur Conan Doyle. Being the first novel is the Holmes detective series by Doyle, A Study in Scarlet largely introduces the reader to the forthcoming series by Doyle. The story features the introduction of Sherlock Holmes and Dr. Watson through mutual friends and a mystery revolving around a corpse found at a derelict house in Brixton, England. A Study in Scarlet is highly recommened for those who enjoy Sherlock Holmes detective novels and also individuals who enjoy the works of Arthur Conan Doyle.
            </x:String>
            <!-- Change the style of the book Tile -->
            <DataTemplate x:Name="TileDataTemplate">
                <Grid>
                    <Image Source="{Binding ImageUrl}"
                           VerticalAlignment="Top"
                           Stretch="Fill" />

                    <Border VerticalAlignment="Bottom"
                            Height="30"
                            Background="#3F000000">
                        <TextBlock Text="{Binding Name}"
                                   Margin="10,0"
                                   Foreground="White"
                                   Style="{StaticResource ItemTextStyle}" />
                    </Border>
                </Grid>
            </DataTemplate>
            <sel:MenuItemSelector x:Name="MenuItemSelector" />
        </ResourceDictionary>
    </Application.Resources>
</Application>

