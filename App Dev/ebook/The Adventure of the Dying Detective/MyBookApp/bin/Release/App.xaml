<Application x:Class="MyBookApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sel="using:MyBookApp.Selectors"
             RequestedTheme="Light">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Common/StandardStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Change these settings to your book title and image -->
            <x:String x:Key="AppName">The Adventure of the Dying Detective</x:String>
            <x:String x:Key="EPubBook">ms-appx:///Assets/Book/The Adventure of the Dying Detective.epub</x:String>
            <x:String x:Key="CoverImage">ms-appx:///Assets/Book/Cover.jpg</x:String>
            <x:String x:Key="Description">
                Sherlock Holmes is dying of a rare Asian disease, and desperately needs the help of a sworn enemy. Watson must try to get to the bottom of this mystery, and save Holmes’ life.
            </x:String>
            <!-- Change the style of the book Tile -->
            <DataTemplate x:Name="TileDataTemplate">
                <Grid>
                    <Image Source="{Binding ImageUrl}"
                           VerticalAlignment="Top"
                           Stretch="Fill" />

                    <Border VerticalAlignment="Bottom"
                            Height="30"
                            Background="#3F000000">
                        <TextBlock Text="{Binding Name}"
                                   Margin="10,0"
                                   Foreground="White"
                                   Style="{StaticResource ItemTextStyle}" />
                    </Border>
                </Grid>
            </DataTemplate>
            <sel:MenuItemSelector x:Name="MenuItemSelector" />
        </ResourceDictionary>
    </Application.Resources>
</Application>

